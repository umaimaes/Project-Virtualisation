@page "/CourseDetails"
@inject CourseService CourseService
<style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary-color: #7F56D9;
        --primary-light: #F9F5FF;
        --secondary-color: #101828;
        --text-color: #344054;
        --light-text: #667085;
        --border-color: #E4E7EC;
        --background-color: #FFFFFF;
        --light-background: #F9FAFB;
        --warning-color: #F79009;
        --success-color: #12B76A;
        --border-radius: 8px;
        --shadow-sm: 0 1px 3px rgba(16, 24, 40, 0.1);
        --shadow-md: 0 4px 8px -2px rgba(16, 24, 40, 0.1), 0 2px 4px -2px rgba(16, 24, 40, 0.06);
        --shadow-lg: 0 12px 16px -4px rgba(16, 24, 40, 0.08), 0 4px 6px -2px rgba(16, 24, 40, 0.03);
        --transition: all 0.3s ease;
    }

    body {
        font-family: 'Poppins', sans-serif;
        color: var(--text-color);
        line-height: 1.5;
        background-color: var(--background-color);
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    a {
        text-decoration: none;
        color: inherit;
        transition: var(--transition);
    }

    img {
        max-width: 100%;
        height: auto;
        display: block;
    }

    /* Typography */
    h1, h2, h3, h4 {
        color: var(--secondary-color);
        font-weight: 600;
        line-height: 1.2;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    h3 {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    h4 {
        font-size: 1.125rem;
        margin-bottom: 0.5rem;
    }

    p {
        margin-bottom: 1rem;
        color: var(--light-text);
    }

    h1 span {
        color: var(--primary-color);
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        border-radius: var(--border-radius);
        font-weight: 500;
        font-size: 1rem;
        cursor: pointer;
        transition: var(--transition);
        text-align: center;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
        border: 1px solid var(--primary-color);
    }

        .btn-primary:hover {
            background-color: #6941C6;
            border-color: #6941C6;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .btn-outline {
        background-color: transparent;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
    }

        .btn-outline:hover {
            background-color: var(--primary-light);
            transform: translateY(-2px);
            box-shadow: var(--shadow-sm);
        }

    .btn-lg {
        padding: 1rem 2rem;
        font-size: 1.125rem;
    }

    .btn-icon {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-icon svg {
            width: 20px;
            height: 20px;
        }

    /* Breadcrumb */
    .breadcrumb {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        color: var(--light-text);
        font-size: 0.875rem;
        padding: 1rem 0;
    }

        .breadcrumb a:hover {
            color: var(--primary-color);
        }

    /* Course Hero Section */
    .course-hero {
        padding: 3rem 0;
        background-color: var(--primary-light);
    }

        .course-hero .container {
            display: grid;
            grid-template-columns: 7fr 5fr;
            gap: 3rem;
            align-items: center;
        }

    .course-hero-content h1 {
        margin-bottom: 1rem;
    }

    .course-description {
        font-size: 1.125rem;
        margin-bottom: 1.5rem;
        color: var(--text-color);
    }

    .course-meta-info {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--light-text);
        font-size: 0.875rem;
    }

        .meta-item svg {
            width: 18px;
            height: 18px;
            color: var(--primary-color);
        }

    .course-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        background-color: var(--primary-light);
        color: var(--primary-color);
        padding: 0.25rem 0.75rem;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .course-rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .stars {
        display: flex;
        color: var(--warning-color);
    }

        .stars svg {
            width: 18px;
            height: 18px;
        }

    .rating-number {
        font-weight: 600;
        color: var(--secondary-color);
    }

    .rating-count {
        color: var(--light-text);
        font-size: 0.875rem;
    }

    .course-instructor-preview {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .instructor-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        overflow: hidden;
    }

        .instructor-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .instructor-info h4 {
        margin-bottom: 0.25rem;
        font-size: 1rem;
    }

    .instructor-info p {
        margin-bottom: 0;
        font-size: 0.875rem;
    }

    .course-image {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
    }

        .course-image::before {
            content: '';
            display: block;
            padding-bottom: 56.25%;
        }

        .course-image img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .course-image .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80px;
            height: 80px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: var(--shadow-md);
        }

            .course-image .play-button:hover {
                background-color: var(--primary-color);
                transform: translate(-50%, -50%) scale(1.1);
            }

            .course-image .play-button svg {
                width: 30px;
                height: 30px;
                color: var(--primary-color);
                transition: var(--transition);
            }

            .course-image .play-button:hover svg {
                color: white;
            }

    /* Course Overview Section */
    .course-overview {
        padding: 4rem 0;
    }

        .course-overview .container {
            display: grid;
            grid-template-columns: 7fr 5fr;
            gap: 3rem;
        }

    /* Course Card */
    .course-card {
        background-color: white;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border-color);
        position: sticky;
        top: 90px;
    }

    .card-header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .course-price {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .current-price {
        font-size: 2rem;
        font-weight: 700;
        color: var(--secondary-color);
    }

    .original-price {
        font-size: 1.25rem;
        text-decoration: line-through;
        color: var(--light-text);
    }

    .discount-badge {
        background-color: var(--success-color);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 100px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .price-note {
        font-size: 0.875rem;
        color: var(--light-text);
        margin-bottom: 1.5rem;
    }

    .enrollment-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Tabs */
    .tabs {
        margin-bottom: 2rem;
        border-bottom: 1px solid var(--border-color);
    }

    .tab-list {
        display: flex;
        gap: 2rem;
    }

    .tab-item {
        padding: 1rem 0;
        font-weight: 500;
        color: var(--light-text);
        position: relative;
        cursor: pointer;
    }

        .tab-item.active {
            color: var(--primary-color);
        }

            .tab-item.active::after {
                content: '';
                position: absolute;
                bottom: -1px;
                left: 0;
                width: 100%;
                height: 2px;
                background-color: var(--primary-color);
                border-radius: 2px;
            }

    /* What You'll Learn */
    .what-youll-learn {
        background-color: var(--light-background);
        border-radius: var(--border-radius);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .learn-list {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .learn-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        font-size: 0.875rem;
    }

        .learn-item svg {
            width: 18px;
            height: 18px;
            color: var(--success-color);
            flex-shrink: 0;
            margin-top: 0.25rem;
        }

    /* Course Curriculum */
    .course-curriculum {
        margin-top: 3rem;
    }

    .curriculum-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .curriculum-stats {
        display: flex;
        gap: 1.5rem;
        color: var(--light-text);
        font-size: 0.875rem;
    }

    .curriculum-accordion {
        margin-bottom: 2rem;
    }

    .accordion-item {
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        margin-bottom: 1rem;
        overflow: hidden;
    }

    .accordion-header {
        background-color: var(--light-background);
        padding: 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
    }

    .accordion-title {
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .accordion-title svg {
            width: 20px;
            height: 20px;
        }

    .accordion-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: var(--light-text);
        font-size: 0.875rem;
    }

    /* Instructor */
    .instructor-section {
        margin-top: 3rem;
    }

    .instructor-card {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 2rem;
        padding: 2rem;
        border-radius: var(--border-radius);
        border: 1px solid var(--border-color);
        margin-bottom: 2rem;
    }

    .instructor-profile {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .instructor-avatar-lg {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .instructor-stats {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--light-text);
    }

        .stat-item svg {
            width: 16px;
            height: 16px;
            color: var(--primary-color);
        }

    .instructor-bio h4 {
        margin-bottom: 1rem;
    }
</style>
